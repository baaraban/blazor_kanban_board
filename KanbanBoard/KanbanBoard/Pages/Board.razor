@page "/board"

@using KanbanBoard.Services.Abstraction
@inject IColumnService service
@using KanbanBoard.Data.Entities

@attribute [Authorize]
<JobsBoardComponent Columns="Columns" />

@code {
    List<JobColumn> Columns = new List<JobColumn>();

    protected async override Task OnInitializedAsync()
    {
        Columns = await service.GetColumns();
    }
}
